<%- include('header') %> <!-- Include Header -->

<!-- ✅ Error Popup (conditionally shown) -->
<% if (typeof error !== 'undefined' && error.length > 0) { %>
<div class="popup show">
    <div class="popup-content">
        <p><%= error[0] %></p>
        <button onclick="document.querySelector('.popup').classList.remove('show')">OK</button>
    </div>
</div>
<% } %>

<div class="container">
    <h1><b> Welcome to WeatherApp </b></h1>

    <!-- ✅ Login Form -->
    <form action="/login" method="POST" class="form"> 
        <input type="email" name="email" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
    </form>

    <!-- ✅ Options -->
    <div class="options">
        <p>Don't have an account?</p>
        <a href="/register" class="btn">Register</a>
        <a href="/forgot-password" class="btn">Forgot Password?</a>
    </div>
</div>

<%- include('footer') %> <!-- Include Footer -->

<!-- ✅ Styling -->
<style>
    /* ========== Global Styles ========== */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    html, body {
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: center;
        background: var(--bg-light);
        color: var(--text-light);
        transition: background 0.3s, color 0.3s;
        background-image: url('/assets/ChatGPT%20Image%20Apr%209,%202025,%2005_45_09%20PM%20(1).png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    .container {
        width: 100%;
        max-width: 450px;
        background: transparent;
        box-shadow: 0 10px 30px rgba(158, 139, 139, 0.3);
        border-radius: 16px;
        padding: 50px 40px;
        text-align: center;
        color: #fffcfc;
        transition: all 0.3s ease-in-out;
        animation: fadeIn 0.8s ease;
        backdrop-filter: blur(5px);
    }

    .container:hover {
        box-shadow: 0 14px 40px rgba(0, 0, 0, 0.35);
        transform: translateY(-5px);
    }

    h1 {
        margin-bottom: 20px;
        font-size: 28px;
        color: #f5f7f8;
    }

    .form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    input {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 8px;
        transition: 0.3s;
    }

    input:focus {
        border-color: #4CAF50;
        box-shadow: 0 0 10px rgba(76, 175, 80, 0.4);
        outline: none;
    }

    button {
        width: 100%;
        padding: 14px;
        background: #4CAF50;
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        cursor: pointer;
        transition: 0.3s;
    }

    button:hover {
        background: #45a049;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    .btn {
        width: 100%;
        padding: 14px;
        background: #3498db;
        color: #fff;
        border: none;
        border-radius: 25px;
        font-size: 17px;
        cursor: pointer;
        transition: 0.3s;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        margin-bottom: 15px;
    }

    .btn:hover {
        background: #2980b9;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    p {
        color: #fefefe;
        margin-top: 15px;
        font-size: 14px;
    }

    /* ✅ Flash Alert Fallback (if using express-flash directly) */
    .alert {
        padding: 15px;
        color: #fff;
        font-size: 14px;
        border-radius: 8px;
        margin-bottom: 20px;
        text-align: center;
        animation: fadeIn 0.5s ease;
    }

    .alert.success {
        background: #4CAF50;
        box-shadow: 0 0 12px rgba(76, 175, 80, 0.6);
    }

    .alert.error {
        background: #e74c3c;
        box-shadow: 0 0 12px rgba(231, 76, 60, 0.6);
    }

    /* ✅ Animations */
    @keyframes fadeIn {
        0% {
            opacity: 0;
            transform: translateY(-20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes slideUp {
        0% {
            transform: translateY(40px);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* ✅ Popup Styles */
    .popup {
        position: fixed;
        top: 0; left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0,0,0,0.6);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 999;
    }

    .popup.show {
        display: flex;
        animation: fadeIn 0.4s ease-in-out;
    }

    .popup-content {
        background: #fff;
        padding: 30px 40px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        animation: slideUp 0.4s ease;
        max-width: 90%;
    }

    .popup-content p {
        font-size: 16px;
        color: #e74c3c;
        margin-bottom: 20px;
    }

    .popup-content button {
        padding: 10px 20px;
        background: #e74c3c;
        border: none;
        border-radius: 8px;
        color: white;
        font-size: 15px;
        cursor: pointer;
        transition: background 0.3s;
    }

    .popup-content button:hover {
        background: #c0392b;
    }

    /* ========== Responsive Design ========== */
    @media (max-width: 768px) {
        .container {
            width: 90%;
            padding: 30px;
        }

        h1 {
            font-size: 24px;
        }
    }

    @media (max-width: 480px) {
        .container {
            width: 95%;
            padding: 25px;
        }

        h1 {
            font-size: 20px;
        }

        button, .btn {
            font-size: 14px;
        }
    }
</style>
