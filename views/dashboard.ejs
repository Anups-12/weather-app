<div class="container">
    <h1>üåç Live Weather Dashboard</h1>

    <!-- ‚úÖ Search Form -->
    <form action="/weather" method="GET">
        <input type="text" name="city" placeholder="Enter city name" required>
        <button type="submit">Get Weather</button>
    </form>

    <!-- üî• Weather Display -->
    <% if (weather) { %>
        <div class="weather-card">
            <h2>üåÜ <%= weather.city %></h2>
            <img src="<%= weather.icon %>" alt="Weather Icon" class="weather-icon">
            <p>üå°Ô∏è Temperature: <span><%= weather.temperature %>¬∞C</span></p>
            <p>üíß Humidity: <span><%= weather.humidity %>%</span></p>
            <p>üí® Wind: <span><%= weather.windSpeed %> km/h</span></p>
            <p>üå§Ô∏è Condition: <span><%= weather.description %></span></p>
        </div>

        <!-- ‚úÖ Additional Weather Details -->
        <div class="details-section">
            <div class="details-card">
                <h3>üåÖ Sunrise</h3>
                <p>06:30 AM</p>
            </div>
            <div class="details-card">
                <h3>üåá Sunset</h3>
                <p>06:45 PM</p>
            </div>
            <div class="details-card">
                <h3>üìç Coordinates</h3>
                <p>Lat: 28.6139, Lon: 77.2090</p>
            </div>
        </div>
        
    <% } else if (error) { %>
        <p class="error-message">‚ùå <%= error %></p>
    <% } %>
</div>

