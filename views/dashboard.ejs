<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard - Weather</title>
  <style>
    :root {
      --bg-light: #ffffff;
      --bg-dark: #121212;
      --text-light: #000000;
      --text-dark: #ffffff;
      --card-light: #f7f7f7;
      --card-dark: #1e1e1e;
      --primary: #007bff;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100%;
      overflow-x: hidden;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: var(--bg-light);
      color: var(--text-light);
      transition: background 0.3s, color 0.3s;
    }

    body.dark {
      background: var(--bg-dark);
      color: var(--text-dark);
    }

    /* Navbar styles */
    .navbar {
      background-color: #1e1e2f;
      padding: 16px 32px;
      color: white;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
      position: sticky;
      top: 0;
      z-index: 1000;
      width: 100%;
    }

    .navbar-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      max-width: 1600px;
      margin: auto;
      width: 100%;
    }

    .navbar-brand {
      font-size: 1.5rem;
      font-weight: bold;
      color: #ffffff;
    }

    .navbar-menu {
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
      padding: 0;
      margin: 0;
    }

    .navbar-menu li a {
      text-decoration: none;
      color: #ffffff;
      font-weight: 500;
      transition: color 0.3s ease;
    }

    .navbar-menu li a:hover {
      color: #00bcd4;
    }

    .logout-btn {
      background-color: #e53935;
      padding: 6px 12px;
      border-radius: 4px;
      font-weight: bold;
      color: white !important;
      transition: background-color 0.3s ease;
    }

    .logout-btn:hover {
      background-color: #c62828;
    }

    .container {
      width: 100%;
      max-width: 1600px;
      padding: 30px;
      margin: auto;
      text-align: center;
      overflow-x: hidden;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }

    .search-container {
      display: flex;
      gap: 10px;
      justify-content: center;
      flex-wrap: wrap;
      width: 100%;
    }

    .search-container form {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
      width: 100%;
      max-width: 100%;
    }

    input[type="text"] {
      padding: 10px;
      font-size: 16px;
      border: 2px solid #ccc;
      border-radius: 6px;
      max-width: 100%;
    }

    button {
      padding: 10px 20px;
      background-color: var(--primary);
      color: white;
      border: none;
      border-radius: 6px;
      font-weight: bold;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

    .toggle {
      margin-left: auto;
      padding: 10px 90px;
      cursor: pointer;
      border: 2px solid var(--primary);
      background: transparent;
      color: var(--primary);
      border-radius: 20px;
      font-size: 15px;
    }

    img {
      margin: 10px auto;
      max-width: 100%;
    }

    .hourly {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 10px;
      margin-top: 15px;
      width: 100%;
    }

    .hour-card {
      background-color: var(--card-light);
      padding: 20px;
      border-radius: 12px;
      transition: transform 0.3s, background 0.3s;
      word-wrap: break-word;
    }

    body.dark .hour-card {
      background-color: var(--card-dark);
    }

    .hour-card:hover {
      transform: translateY(-5px);
    }

    .hour-card img {
      width: 40px;
    }

    @media screen and (max-width: 768px) {
      header {
        flex-direction: column;
        gap: 15px;
      }

      .navbar-menu {
        flex-direction: column;
        gap: 10px;
        align-items: flex-end;
      }

      .toggle {
        margin-left: 0;
      }
    }
  </style>
</head>
<body>

  <!-- Top Navbar -->
<nav class="navbar">
  <div class="navbar-container">
    <div class="navbar-brand">My Dashboard</div>
    <ul class="navbar-menu">
      <li><a href="/dashboard">Home</a></li>
      <li><a href="/about">About</a></li>
      <li><a href="/services">Services</a></li>
      <li><a href="/contact">Contact</a></li>
      <li><a href="/faq">FAQs</a></li>
      <li><a href="/logout" class="logout-btn">Logout</a></li>
    </ul>
  </div>
</nav>


  <!-- Main content -->
  <div class="container">
    <header>
      <div class="search-container">
        <form action="/dashboard" method="GET">
          <input type="text" name="city" placeholder="Enter city..." required>
          <button type="submit">Search</button>
        </form>
      </div>
      <button class="toggle" onclick="toggleTheme()">Toggle Theme</button>
    </header>

    <% if (error) { %>
      <h2><%= error %></h2>
    <% } else if (weather) { %>
      <h1>Weather in <%= weather.city %>, <%= weather.country %></h1>
      <img src="<%= weather.icon %>" alt="icon" />
      <p>Condition: <%= weather.condition %></p>
      <p>Temperature: <%= weather.temperature %> Â°C</p>
      <p>Humidity: <%= weather.humidity %>%</p>
      <p>Wind Speed: <%= weather.windSpeed %> km/h</p>
      <p><strong>Pressure:</strong> <%= weather.pressure %> mb</p>

      <h2>ðŸ•’ Hourly Forecast</h2>
      <div class="hourly">
        <% if (hourly && hourly.length) { %>
          <% hourly.forEach(hour => { %>
            <div class="hour-card">
              <h3><%= hour.time.split(" ")[1] %></h3>
              <img src="<%= hour.condition.icon %>" alt="icon" />
              <p><strong><%= hour.condition.text %></strong></p>
              <p>Temp: <%= hour.temp %> Â°C</p>
              <p>Feels like: <%= hour.feelslike %> Â°C</p>
              <p>Wind: <%= hour.wind %> km/h</p>
              <p>Humidity: <%= hour.humidity %>%</p>
              <p>Visibility: <%= hour.visibility %> km</p>
              <p>Pressure: <%= hour.pressure %> mb</p>
              <p>Cloud: <%= hour.cloud %>%</p>
            </div>
          <% }) %>
        <% } else { %>
          <p>No hourly data available.</p>
        <% } %>
      </div>
    <% } %>
  </div>

  <script>
    function toggleTheme() {
      document.body.classList.toggle('dark');
      localStorage.setItem('theme', document.body.classList.contains('dark') ? 'dark' : 'light');
    }

    window.onload = () => {
      const saved = localStorage.getItem('theme');
      if (saved === 'dark') {
        document.body.classList.add('dark');
      }
    };
  </script>
</body>
</html>
